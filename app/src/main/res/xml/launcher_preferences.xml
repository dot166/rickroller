<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="pref_video"
        android:title="enable video menu"
        android:summary="show menu to share raw video or show the raw video"
        android:defaultValue="false"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_video_share"
        android:title="enable video share"
        android:summary="enable raw video sharing"
        android:defaultValue="false"
        android:persistent="true" />

</androidx.preference.PreferenceScreen>
